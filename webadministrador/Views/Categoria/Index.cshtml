@model Modelo.c3_dominio.entidad.servicios.ContactoServicio

@{
    ViewBag.Title = "Familia";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Mantenimiento de Familia de Categorias</h3>
            </div><!-- /.box-header -->
            <div class="box-footer">
                <button onClick="location.href='@Url.Action("Crear", "Categoria")'" class="btn btn-primary">Nuevo</button>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Opción</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        @foreach (var item in Model.listacategoria)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombrecategoria)
                                </td>
                                <td width="120">
                                    <div class="btn-group">
                                        <button class="btn btn-default btn-sm"  onclick="location.href='@Url.Action("Index","SubCategoria", new {codigocategoria= item.codigocategoria})'" title="Ver Sub Familias"><i class="fa fa-files-o"></i></button>
                                        <button class="btn btn-default btn-sm"  onclick="location.href='@Url.Action("Editar","Categoria", new {codigo= item.codigocategoria})'" title="Editar"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-default btn-sm" onclick="location.href='@Url.Action("Eliminar","Categoria", new {codigo= item.codigocategoria})'" title="Eliminar"><i class="fa fa-trash-o"></i></button>
                                    </div>
                                </td>
                            </tr>
                        }
                       
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
        </div>
    </div>
