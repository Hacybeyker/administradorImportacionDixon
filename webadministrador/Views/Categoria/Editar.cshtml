@model Modelo.c3_dominio.entidad.servicios.ContactoServicio
@{
    ViewBag.Title = "Editar Categoria";
}
<div class="row">
    <div class="col-md-5">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Editar Familia de Categorias</h3>
            </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        @Html.EditorFor(model => model.categoria.codigocategoria, new { htmlAttributes = new { @type = "hidden" } })
                        <div class="form-group">
                            <div class="col-md-2 control-label">
                                <label>Nombre:</label>
                            </div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.categoria.nombrecategoria, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Editar</button>
                    </div>
                }  
            </div><!-- /.box -->
        </div>
    </div>

