@model Modelo.c3_dominio.entidad.servicios.ContactoServicio
@{
    ViewBag.Title = "Crear Producto";
}
<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Agregar Productos a Linea <b>@Model.lineasubcategoria.nombrelinea</b></h3>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="box-body">
                    @Html.EditorFor(model => model.producto.codigolineasubcategoria, new { htmlAttributes = new { @type = "hidden" } })
                    <div class="form-group">
                        <div class="col-md-2 control-label">
                            <label>Nombre:</label>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.producto.nombreProducto, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-md-2 control-label">
                            <label>Precio:</label>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.producto.precioProducto, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-md-2 control-label">
                            <label>Descripción:</label>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.producto.descripcionProducto, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-md-2 control-label">
                            <label>Detalle:</label>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.producto.detalleProducto, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            }
        </div>
    </div>
</div>


