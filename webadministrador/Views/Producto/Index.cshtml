@model Modelo.c3_dominio.entidad.servicios.ContactoServicio

@{
    ViewBag.Title = "Productos";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <i class="ion ion-clipboard"></i>
                <h3 class="box-title">Linea de Productos de <b>@Model.lineasubcategoria.nombrelinea</b> </h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Descripción</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listaProducto)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombreProducto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.precioProducto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descripcionProducto)
                                </td>
                                <td width="120">
                                    <div class="btn-group">
                                        <button class="btn btn-default btn-sm" onclick="location.href='@Url.Action("Index","ProductoImagen", new {codigo= item.codigoProducto})'" title="Ver Imagenes"><i class="fa fa-files-o"></i></button>
                                        <button class="btn btn-default btn-sm" onclick="location.href='@Url.Action("Editar","Producto", new {codigo= item.codigoProducto})'" title="Editar"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-default btn-sm" onclick="location.href='@Url.Action("Eliminar","Producto", new {codigo= item.codigoProducto})'" title="Eliminar"><i class="fa fa-trash-o"></i></button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="box-footer clearfix no-border">
                <button class="btn btn-default pull-right" onClick="location.href='@Url.Action("Crear", "Producto", new {codigolineasubcategoria=Model.lineasubcategoria.codigolinea})'"><i class="fa fa-plus"></i> Agregar</button>
                <button class="btn btn-default pull-left" onClick="location.href='@Url.Action("Index", "LineaSubCategoria", new {codigosubcategoria=Model.lineasubcategoria.codigosubcategoria})'"><i class="fa fa-angle-left"></i> Atras</button>
            </div>
        </div>
    </div>
</div>

