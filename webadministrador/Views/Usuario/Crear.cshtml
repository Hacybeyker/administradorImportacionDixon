@model Modelo.c3_dominio.entidad.servicios.ContactoServicio
@{
    ViewBag.Title = "Nuevo Usuario";
}
<div class="row">
    <div class="col-md-5">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Nuevo Usuario</h3>
            </div>
            @using (Html.BeginForm("Crear", "Usuario", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="box-body">
                    <div class="form-group">
                        <div class="control-label col-xs-2">
                            <label>Nombre:</label>
                        </div>
                        <div class="col-xs-10">
                            @Html.EditorFor(model => model.usuario.nombreUsuario, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-xs-2">
                            <label>Cuenta:</label>
                        </div>
                        <div class="col-xs-10">
                            @Html.EditorFor(model => model.usuario.cuentaUsuario, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-xs-2">
                            <label>Password:</label>
                        </div>
                        <div class="col-xs-10">
                            @Html.PasswordFor(model => model.usuario.claveUsuario, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-xs-2">
                            <label>Permisos:</label>
                        </div>
                        <div class="col-xs-10">
                            Mensaje
                            @Html.CheckBoxFor(model => model.usuario.mensajeusuario)
                            Usuario
                            @Html.CheckBoxFor(model => model.usuario.usuariousuario)
                            Categoria
                            @Html.CheckBoxFor(model => model.usuario.categoriausuario)
                        </div>
                        <small>Solo se debe asignar una responsabilidad a un usuario</small>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            }
        </div><!-- /.box -->
    </div>
</div>
