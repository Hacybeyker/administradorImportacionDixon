@model Modelo.c3_dominio.entidad.servicios.ContactoServicio
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Mantenimiento de Usuarios</h3>
            </div><!-- /.box-header -->
            <div class="box-footer">
                <button onClick="location.href='@Url.Action("Crear", "Usuario")'" class="btn btn-primary">Nuevo</button>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Cuenta</th>
                            <th>Opcion</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model.listaUsuarios)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => usuario.nombreUsuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => usuario.cuentaUsuario)
                                </td>
                                <td width="120">
                                    <div class="btn-group">
                                        <button class="btn btn-default btn-sm" onclick="location.href='@Url.Action("Eliminar","Usuario", new {codigoUsuario= usuario.codigoUsuario})'" title="Eliminar"><i class="fa fa-trash-o"></i></button>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>
