@model Modelo.c3_dominio.entidad.servicios.ContactoServicio
@{
    ViewBag.Title = "Lista Imagenes";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <i class="ion ion-clipboard"></i>
                <h3 class="box-title">Imagenes del Producto <b>@Model.producto.nombreProducto</b> </h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                @foreach (var item in Model.listaImaagenProducto)
                {
                    if (item.principal)
                    {
                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail">
                                <img src="@item.urlimagen">
                                <div class="caption">
                                    <h3>@item.nombreimagen</h3>
                                    <p>IMAGEN PRINCIPAL</p>
                                    <p>
                                        <a href="#" class="btn btn-primary" onclick="location.href='@Url.Action("EditarPrincipal","ProductoImagen", new {codigo= item.codigoimagen})'" role="button">Editar</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail">
                                <img src="@item.urlimagen">
                                <div class="caption">
                                    <h3>@item.nombreimagen</h3>
                                    <p>Imagen Segundaria</p>
                                    <p>
                                        <a href="#" class="btn btn-primary" onclick="location.href='@Url.Action("Editar","ProductoImagen", new {codigo= item.codigoimagen})'" role="button">Editar</a>
                                        <a href="#" class="btn btn-default" onclick="location.href='@Url.Action("Eliminar","ProductoImagen", new {codigo= item.codigoimagen})'" role="button">Eliminar</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="box-footer clearfix no-border">
                @if (Model.existeImgPrincipal())
                {
                    <button class="btn btn-default pull-right" onClick="location.href='@Url.Action("Crear", "ProductoImagen", new {codigo=Model.producto.codigoProducto})'"><i class="fa fa-plus"></i> Agregar</button>
                }
                else
                {
                    <button class="btn btn-default pull-right" onClick="location.href='@Url.Action("CrearPrincipal", "ProductoImagen", new {codigo=Model.producto.codigoProducto})'"><i class="fa fa-plus"></i> Agregar Img. Principal</button>
                }

                <button class="btn btn-default pull-left" onClick="location.href='@Url.Action("Index", "Producto", new {codigolinea=Model.producto.codigolineasubcategoria})'"><i class="fa fa-angle-left"></i> Atras</button>
            </div>
        </div>
    </div>
</div>

