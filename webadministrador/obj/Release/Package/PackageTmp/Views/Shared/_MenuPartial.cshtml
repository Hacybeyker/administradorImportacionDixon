@model Modelo.c3_dominio.entidad.servicios.ContactoServicio
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Content/dist/img/avatar5.png" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@Session["LogedUserFullname"].ToString()</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Activo</a>
            </div>
        </div>
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">NAVEGACIÓN PRINCIPAL</li>
            @if (Session["PermisoMensaje"].ToString() == "True" && Session["PermisoUsuario"].ToString() == "True" && Session["PermisoCategoria"].ToString() == "True")
            {
                <li>
                    <a href="@Url.Action("Index", "Categoria")">
                        <i class="fa fa-folder"></i> <span>Familia<small class="label pull-right bg-blue">@Model.cantidadCategoria()</small></span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Usuario")">
                        <i class="fa fa-user"></i> <span>Usuarios</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Home")">
                        <i class="fa fa-envelope"></i> <span>Mensajes<small class="label pull-right bg-yellow">@Model.cantidadMensaje()</small></span>
                    </a>
                </li>
                <!--
                <li>
                    <a href="@Url.Action("cargarImagen", "ProductoImagen")">
                        <i class="fa fa-envelope"></i> <span>Imagenes</span>
                    </a>
                </li>
                    -->
            }
            else
            {
                if (Session["PermisoMensaje"].ToString() == "True")
                {
                    <li>
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fa fa-envelope"></i> <span>Mensajes<small class="label pull-right bg-yellow">@Model.cantidadMensaje()</small></span>
                        </a>
                    </li>
                }
                else
                {
                    if (Session["PermisoUsuario"].ToString() == "True")
                    {
                        <li>
                            <a href="@Url.Action("Index", "Usuario")">
                                <i class="fa fa-user"></i> <span>Usuarios</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        if (Session["PermisoCategoria"].ToString() == "True")
                        {
                            <li>
                                <a href="@Url.Action("Index", "Categoria")">
                                    <i class="fa fa-folder"></i> <span>Familia<small class="label pull-right bg-blue">@Model.cantidadCategoria()</small></span>
                                </a>
                            </li>
                            <!--                            <li>
                                <a href="@Url.Action("cargarImagen", "ProductoImagen")">
                                    <i class="fa fa-envelope"></i> <span>Imagenes</span>
                                </a>
                            </li>
                                -->

                        }
                    }
                }
            }
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>














